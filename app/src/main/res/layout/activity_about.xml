<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/birugelap"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="INFO COVID-19"
        android:textColor="@color/putih"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titel"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/deskripsi_about"
        android:textColor="@color/putih"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titelsumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desk"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:text="Sumber : "
        android:textColor="@color/putih"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/linear_sumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titelsumber"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_cari_negara"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Peta Dunia : https://github.com/mathdroid/covid19"
            android:textColor="@color/putih"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="Peta Indonesia : https://www.covid19.go.id/"
            android:textColor="@color/putih"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="List Kasus : https://indonesia-covid-19.mathdro.id/api/"
            android:textColor="@color/putih"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:text="RS. Rujukan : Keputusan Kemenkes No. HK.01.07/MENKES/169/2020"
            android:textColor="@color/putih"
            android:textSize="10sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear_sumber"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/putih" />

    <TextView
        android:id="@+id/deskapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/deskApp"
        android:textColor="@color/putih"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_55"
        android:layout_below="@id/deskapp"
        android:textColor="@color/putih"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:layout_marginHorizontal="16dp"
        android:text="Sumber : https://www.thevarge.com/2020/3/5/21167102/apple-google-coronavirus-iphone-apps-android-misinformation-reject-ban"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constringsosmed"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="100dp"
        android:layout_below="@id/tv_55"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imagefb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bundar"
            android:padding="8dp"
            android:src="@drawable/iconfb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageig"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bundar"
            android:padding="6dp"
            android:src="@drawable/iconig"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imagefb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466" />

        <ImageView
            android:id="@+id/imagein"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bundar"
            android:padding="6dp"
            android:src="@drawable/iconin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagefb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/save"
            android:layout_below="@id/constringsosmed"
            android:text="staysave"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/putih"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>