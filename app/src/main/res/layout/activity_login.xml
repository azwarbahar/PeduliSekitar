<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih2"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textColor="@color/orange"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvpetugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlogin"
        android:layout_marginHorizontal="16dp"
        android:text="Petugas"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvpetugas"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_btn_batal"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="20dp"
        android:hint="Usrname/Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/abuabu" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/input_username"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_btn_batal"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/abuabu" />

    <TextView
        android:id="@+id/tv_salah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/orange"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:text="Username atau Password Salah" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_password"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_btn_lapor"
        android:text="Login"
        android:textColor="@color/putih2"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_arrow_back_orange"
        android:drawablePadding="10dp"
        android:text="Kembali"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="-500dp"
        android:id="@+id/initid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/initnama"
        android:layout_below="@id/initid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/initprofesi"
        android:layout_below="@+id/initnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/inituser"
        android:layout_below="@id/initprofesi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/initpass"
        android:layout_below="@id/inituser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>